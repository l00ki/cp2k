&FORCE_EVAL
  METHOD SIRIUS
  &PW_DFT
    &CONTROL
       PROCESSING_UNIT cpu
       STD_EVP_SOLVER_TYPE lapack
       GEN_EVP_SOLVER_TYPE lapack
       VERBOSITY 2
    &END CONTROL
    &PARAMETERS
       ELECTRONIC_STRUCTURE_METHOD  pseudopotential
       SMEARING_WIDTH 0.025
       USE_SYMMETRY true
       NUM_MAG_DIMS 0
       NUM_FV_STATES 40
       GK_CUTOFF 6.0
       PW_CUTOFF 20.00
       ENERGY_TOL 1e-8
       POTENTIAL_TOL 1e-8
       NUM_DFT_ITER 100
       NGRIDK 2 2 2
    &END PARAMETERS
    &ITERATIVE_SOLVER
       ENERGY_TOLERANCE 1e-5
       NUM_STEPS 20
       SUBSPACE_SIZE 4
       TYPE davidson
       CONVERGE_BY_ENERGY 1
    &END ITERATIVE_SOLVER
    &MIXER
       BETA 0.95
       TYPE broyden1
       MAX_HISTORY 8
    &END MIXER
  &END PW_DFT
    &DFT
      &XC
         &XC_FUNCTIONAL
            &LDA_X
            &END LDA_X
            &LDA_C_PZ
            &END LDA_C_PZ
         &END XC_FUNCTIONAL
      &END XC
    &END DFT

  &SUBSYS
    &CELL
      A [bohr] 7.260327248 0.0 0.0
      B [bohr] 0.0 7.260327248 0.0
      C [bohr] 0.0 0.0 7.260327248
    &END CELL
    &COORD
      SCALED
      V 0.0  0.0  0.0
      Sr 0.5 0.5 0.5
      O 0.5 0.0 0.0
      O 0.0 0.5 0.0
      O 0.0 0.0 0.5
    &END COORD
    &KIND Sr
      POTENTIAL UPF sr_lda_v1.uspp.F.UPF.json
    &END KIND
    &KIND O
      POTENTIAL UPF o_lda_v1.2.uspp.F.UPF.json
    &END KIND
    &KIND V
      POTENTIAL UPF v_lda_v1.4.uspp.F.UPF.json
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL
  PROJECT Gold
  PRINT_LEVEL MEDIUM
&END GLOBAL
