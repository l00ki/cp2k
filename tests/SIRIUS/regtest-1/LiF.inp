&FORCE_EVAL
  METHOD SIRIUS
  &PW_DFT
    &CONTROL
       PROCESSING_UNIT cpu
       STD_EVP_SOLVER_TYPE lapack
       GEN_EVP_SOLVER_TYPE lapack
       VERBOSITY 2
    &END CONTROL
    &PARAMETERS
       ELECTRONIC_STRUCTURE_METHOD  pseudopotential
       SMEARING_WIDTH 0.025
       USE_SYMMETRY true
       NUM_MAG_DIMS 0
       GK_CUTOFF 6.0
       PW_CUTOFF 20.00
       ENERGY_TOL 1e-6
       POTENTIAL_TOL 1e-8
       NUM_DFT_ITER 100
       NGRIDK 2 2 2
    &END PARAMETERS
    &ITERATIVE_SOLVER
       ENERGY_TOLERANCE 1e-2
       RESIDUAL_TOLERANCE 1e-6
       NUM_STEPS 20
       SUBSPACE_SIZE 4
       TYPE davidson
       CONVERGE_BY_ENERGY 1
    &END ITERATIVE_SOLVER
    &MIXER
       BETA 0.75
       TYPE broyden1
       MAX_HISTORY 8
    &END MIXER
  &END PW_DFT
  &DFT
      &XC
         &XC_FUNCTIONAL
            &LDA_X
            &END LDA_X
            &LDA_C_PZ
            &END LDA_C_PZ
         &END XC_FUNCTIONAL
      &END XC
    &END DFT

  &SUBSYS
    &CELL
      A [bohr] 0.0 3.80402 3.80402
      B [bohr] 3.80402 0.0 3.80402
      C [bohr] 3.80402 3.80402 0.0
    &END CELL
    &COORD
      SCALED
        Li 0.0 0.0 0.0
        F 0.5 0.5 0.5
    &END COORD
    &KIND Li
      POTENTIAL UPF "Li.pz-s-kjpaw_psl.0.2.1.UPF.json"
    &END KIND
    &KIND F
      POTENTIAL UPF "F.pz-n-kjpaw_psl.0.1.UPF.json"
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL
  PROJECT NiO
  PRINT_LEVEL MEDIUM
&END GLOBAL
