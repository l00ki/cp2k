&GLOBAL
  PROJECT argon
  RUN_TYPE ENERGY
  PRINT_LEVEL MEDIUM
&END GLOBAL
&FORCE_EVAL
  METHOD QS
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 200
    &END MGRID
    &QS
      METHOD GPW
    &END QS
    &SCF
      SCF_GUESS ATOMIC
      MAX_SCF 3
      EPS_SCF 1.0e-6
    &END SCF
    @XCTYPE vdW-DF-cx0p
  &END DFT
  &SUBSYS
    &CELL
      ABC 10.0 10.0 10.0
      ALPHA_BETA_GAMMA 90 90 90
      PERIODIC NONE
    &END CELL
    &COORD
      Ar 0.0 0.0 0.0
      Ar 0.0 0.0 3.7
    &END COORD
    &KIND Ar
      BASIS_SET DZVP-MOLOPT-SR-GTH-q8
      POTENTIAL GTH-PADE-q8
    &END
  &END SUBSYS
&END FORCE_EVAL
